<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./recipe.css">
</head>

<body>
    <div class="FoodtitleHeader">
        <div class="HealthyFoodIcon">
            <img src="/HealthyfoodIcon.svg" />
        </div>
        <div class="Foodtitle">
            <%= recipe.dish%>
        </div>
    </div>

    <div class="ingredientsContainer">
        <div class="ingredientsContainertitle">
            <div>
                <img src="./ingredients.svg" class="ingredientsSvg " alt="Ingredients Icon" />
            </div>
            <div>
                <%= title.ingredients %>
            </div>
        </div>
        <div class="ingredientsGrid">
            <% recipe?.healthierVersion.ingredients.forEach((ingredient, index)=> { %>
                <div class="ingredient">
                    <div class="Checkbox">
                    </div>
                    <div>
                        <%= ingredient %>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <div class="RecipeContainer">
        <div class="RecipeContainertitlewithimg">
            <div class="Recipeimg">
                <img src="./recipe.svg" class="Recipeimg" alt="Recipe Icon" />
            </div>
            <div class="RecipeContainertitle">
                <%= title.steps %>
            </div>
        </div>

        <!-- Steps Container -->
        <div class="RecipeContainerSteps">
            <% recipe?.healthierVersion.steps.forEach((step, index)=> { %>
                <div class="recipe">
                    <div class="Checkbox">
                    </div>
                    <div class="recipetext">
                        <%= step %>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <div class="whyTheseChanges">
        <div class="sectionTitle">
            <span>
                <%= title.nutritionComparison %>
            </span>
        </div>

        <!-- Comparison Container -->
        <div class="comparisonContainer">
            <!-- Before Column -->
            <div class="BeforcomparisonColumn">
                <div class="before">
                    <%= title.before %>
                </div>
                <div class="BeforenutritionValues">
                    <% nutritionComparisonBeforeValues.forEach((value, index)=> { %>
                        <div class="BeforenutritionValue">
                            <div class="closeBefore">
                                <!-- Replace <X /> with inline SVG or image if needed -->
                            </div>
                            <div>
                                <!-- <span>
                                </span> -->
                                <span>
                                    <%= value %>
                                </span>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

            <!-- Arrow Between Columns -->
            <div class="arrow">
                <!-- Replace <ArrowRightLeft /> and <ArrowDownUp /> with inline SVGs or images if needed -->
            </div>

            <!-- After Column -->
            <div class="AftercomparisonColumn">
                <div class="after">
                    <%= title.after %>
                </div>
                <div class="AfternutritionValues">
                    <% nutritionComparisonAfterValues.forEach((value, index)=> { %>
                        <div class="AfternutritionValue">
                            <span class="afterright">
                                <!-- Replace <CheckCheck /> with inline SVG or image if needed -->
                            </span>
                            <div>
                                <span>
                                    <%= value %>
                                </span>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

        <!-- Why These Changes Section -->
        <div class="whyTheseChangesContainer">
            <div class="sectionTitleForwhyTheseChanges">
                <div>
                    <%= title.whyTheseChanges %>
                </div>
                <div>
                    <!-- Replace <BiQuestionMark /> with inline SVG or image if needed -->
                </div>
            </div>

            <!-- Substitutions -->
            <div class="substitutionsContainer">
                <% recipe?.substitutions.forEach((substitution, index)=> { %>
                    <div class="substitutionCard">
                        <div class="WhyTheseChangesIcon">
                            <!-- Replace <RotateCcw /> with inline SVG or image if needed -->
                        </div>
                        <div>
                            <div class="substitutionChange">
                                <div class="substitutionItem from">
                                    <%= substitution.from %>
                                </div>
                                <!-- Replace <MoveRight /> with inline SVG or image if needed -->
                                <div class="substitutionItem to">
                                    <%= substitution.to %>
                                </div>
                            </div>
                            <div class="substitutionReason">
                                <%= substitution.why %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <div class="HistoryContainer">
        <div class="HistoryTitle">
            <div>
                <!-- Replace <History /> with an inline SVG or image if needed -->
            </div>
            <div>
                <%= title.History %>
            </div>
        </div>
        <div class="foodHistoryContext">
            <%= recipe?.foodHistoryContext %>
        </div>
    </div>

    <!-- Fun Fact Section -->
    <div class="funfactContainer">
        <div class="funFactHeader">
            <div>
                <!-- Replace <Lightbulb /> with an inline SVG or image if needed -->
            </div>
            <div>
                <%= title.funFact %>
            </div>
        </div>
        <div class="funFactsubtitle">
            <%= recipe?.funFact %>
        </div>
    </div>

</body>

</html>